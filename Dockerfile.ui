FROM node:20-alpine AS builder

WORKDIR /app

COPY package*.json ./
COPY packages/core/package.json ./packages/core/
COPY packages/adapter-node/package.json ./packages/adapter-node/
COPY packages/main/package.json ./packages/main/
COPY packages/ui/package.json ./packages/ui/

RUN npm ci

COPY tsconfig.json ./
COPY packages/ui ./packages/ui
# Core might be needed if ui imports it, usually not for frontend unless shared code
COPY packages/core ./packages/core 
# Shared might be needed
# COPY packages/shared ./packages/shared
# (Assuming shared exists based on package.json, verify if needed. I saw shared in server/packages/adapter-node/package.json dependencies. I should copy it just in case.)

RUN npm run build -w packages/ui

FROM nginx:alpine

COPY packages/ui/nginx.conf /etc/nginx/conf.d/default.conf
COPY packages/ui/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

COPY --from=builder /app/packages/ui/dist /usr/share/nginx/html

EXPOSE 80

ENTRYPOINT ["/entrypoint.sh"]
CMD ["nginx", "-g", "daemon off;"]
