{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "outDir": "./dist",
        "types": [
            "node"
        ],
        "baseUrl": ".",
        "paths": {
            "@package-broker/core": [
                "../core/src"
            ],
            "@package-broker/shared": [
                "../shared/src"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}